@model Web.Areas.Admin.ViewModels.TranslationCreateEditViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Translation</h4>
        <hr/>
        @Html.ValidationSummary(true, "", new {@class = "text-danger"})
        <div class="form-group">
            @Html.LabelFor(model => model.Translation.Value, "Value", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Translation.Value, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Translation.Value, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.MultiLangStrings, "MultiLangString", htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.DropDownListFor(model => model.Translation.MultiLangStringId, Model.MultiLangStrings, htmlAttributes: new {@class = "form-control"})
                @Html.ValidationMessageFor(model => model.MultiLangStrings, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Translation.Culture, htmlAttributes: new {@class = "control-label col-md-2"})
            <div class="col-md-10">
                @Html.EditorFor(model => model.Translation.Culture, new {htmlAttributes = new {@class = "form-control"}})
                @Html.ValidationMessageFor(model => model.Translation.Culture, "", new {@class = "text-danger"})
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default"/>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>