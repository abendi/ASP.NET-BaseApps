@model Web.Areas.Admin.ViewModels.ImageCreateViewModel

<div class="form-group">
    @Html.LabelFor(model => model.Attachment, htmlAttributes: new { @class = "control-label col-md-2" })
    <div class="col-md-10">
        @Html.TextBoxFor(model => model.Attachment, new { id = "file", type = "file" })
        @Html.ValidationMessageFor(model => model.Attachment, "", new { @class = "text-danger" })
    </div>
</div>
<div class="form-group">
    @Html.LabelFor(model => model.Image.ImageUrl, htmlAttributes: new {@class = "control-label col-md-2"})
    <div class="col-md-10">
        @Html.EditorFor(model => model.Image.ImageUrl, new {htmlAttributes = new {@class = "form-control", id = "imageName"}})
        @Html.ValidationMessageFor(model => model.Image.ImageUrl, "", new {@class = "text-danger"})
    </div>
</div>


@section Scripts
{
    <script type="text/javascript">
    $(document).ready(function() {
        $("#file").change(function () {
            var fullFileName = $("#file").val();
            var fileExt = fullFileName.split(".").pop();
            var fileName = fullFileName.replace("." + fileExt, "");
            $("#imageName").val(fileName);
        });
    });
</script>
}
